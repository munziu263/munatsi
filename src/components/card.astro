---
import { Image } from "astro:assets";
const {title, date, description, href, image} = Astro.props
---
<a href={href} class="group block">
    <article class="h-full bg-default border border-default rounded overflow-hidden transition-colors hover:border-primary">
        <div class="aspect-video overflow-hidden">
            <Image
                src={image.src}
                class="w-full h-full object-cover"
                width={640}
                height={360}
                alt={image.alt}
            />
        </div>
        <div class="p-6">
            <time class="text-xs text-offset">{date}</time>
            <h3 class="mt-2 text-xl font-bold text-default">{title}</h3>
            <p class="mt-3 text-sm text-offset leading-relaxed line-clamp-3">{description}</p>
            <div class="mt-4 text-sm text-offset group-hover:text-default transition-colors">
                Read article â†’
            </div>
        </div>
    </article>
</a>
