const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<ContentSection title="munatsi" id="intro">
      <Picture
        slot="eyebrow"
        class="h-32 object-cover rounded-full"
        src={munatsiImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="Munatsi's head shot floating in space"
      />
