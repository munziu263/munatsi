---
import { Icon } from "astro-icon/components";
import SkillIcon from "~/components/skill-icon.astro";
const { category, icon, skills } = Astro.props;
---

<div
  class="relative flex items-start justify-between rounded bg-offset border border-border p-4 sm:p-6 lg:p-8"
>
  <div class="pt-4 text-offset">
    <!-- ICON -->
    <Icon name={icon} class="h-6 w-6 sm:h-8 sm:w-8" />
    <!-- Heading -->
    <h3 class="mt-2 font-bold text-default text-md sm:text-lg">
      {category}
    </h3>
    <!-- List of skills -->
    <div class="flex flex-wrap gap-4 pt-4 text-default">
      {skills.map((skill: any) => <SkillIcon {...skill} />)}
    </div>
  </div>
</div>
