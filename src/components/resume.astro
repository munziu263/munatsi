---
import Layout from "~/layouts/LayoutNoHeader.astro";
import ResumeHead from "~/components/resume-head.astro";
import ResumeExperience from "~/components/resume-experience.astro";
import ResumeSkills from "~/components/resume-skills.astro";
import ResumeEducation from "~/components/resume-education.astro";
---

<div id="resume" class="w-5/6 mx-auto">
  <div class="md:flex md:gap-8">
    <aside class="md:sticky top-0 md:h-screen pt-28">
      <!-- // Fixed Sidebar -->
      <ResumeHead />
    </aside>

    <main class="space-y-4 mt-4 md:mt-0 md:p-28">
      <!-- // Content -->
      <ResumeExperience />
      <ResumeSkills />
      <ResumeEducation />
    </main>
  </div>
</div>
