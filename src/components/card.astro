---
import { Image } from "@astrojs/image/components";
const {title, date, description, href, image} = Astro.props

const width = 640;
const height = 360;
const sizes = "100vw";
---
<div class="max-w-sm bg-offset border border-secondary rounded-lg shadow">
    <a href={href}>
        <Image src={image.src} class="rounded-t-lg" width={width} height={height} aspectRatio={16/9} sizes={sizes} alt={image.alt}/>
    </a>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-lg md:text-xl font-bold tracking-tight text-primary">{title}</h5>
        </a>
        <p class="mb-3 text-xs md:text-sm font-normal text-offset">{description}</p>
        <a href={href} class="inline-flex items-center px-3 py-2 text-xs md:text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            Read more
            <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
    </div>
</div>
