---
import { Image } from "@astrojs/image/components";
const {title, date, description, href, image} = Astro.props

const width = 640;
const height = 360;
const sizes = "100vw";
---
<a href={href} class="group block">
    <article class="h-full bg-default border border-default rounded-xl overflow-hidden transition-all duration-300 hover:shadow-lg hover:border-primary hover:-translate-y-1">
        <div class="aspect-video overflow-hidden">
            <Image
                src={image.src}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                width={width}
                height={height}
                aspectRatio={16/9}
                sizes={sizes}
                alt={image.alt}
            />
        </div>
        <div class="p-6">
            <time class="text-xs font-medium text-offset uppercase tracking-wider">{date}</time>
            <h3 class="mt-2 text-xl font-bold text-default group-hover:text-primary transition-colors">{title}</h3>
            <p class="mt-3 text-sm text-offset leading-relaxed line-clamp-3">{description}</p>
            <div class="mt-4 flex items-center text-sm font-medium text-primary">
                Read article
                <svg class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </div>
        </div>
    </article>
</a>
